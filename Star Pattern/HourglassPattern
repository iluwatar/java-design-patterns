public class HourglassPattern {
	
	public static void main(String[] args) {
		for (int i = 1; i <=10; i++) {
			for (int j = 1; j <i; j++) {
				System.out.print("  ");
			}
			for (int j = 1; j <=11-i; j++) {
				System.out.print(" "+i+"  ");
			}
			System.out.println();
		}
		for (int i = 9; i >=1; i--) {
			for (int j = 1; j <i; j++) {
				System.out.print("  ");
			}
			for (int j = 1; j <=11-i; j++) {
				System.out.print(" "+i+"  ");
			}
			System.out.println();
		}
	}
}
