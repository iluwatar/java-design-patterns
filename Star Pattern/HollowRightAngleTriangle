package star_pattern;

public class HollowRightAngleTriangle {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		for (int i = 1; i <=10; i++) {
			for (int j = 1; j <=i; j++) {
				if(j==1||i==j||i==10) {
					System.out.print("* ");
				}else {
					System.out.print("  ");
				}
			}
			System.out.println();
		}

	}

}
