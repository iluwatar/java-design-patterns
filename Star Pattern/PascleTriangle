
public class PascleTriangle {

	public static void main(String[] args) {
		for (int i = 1; i <=10; i++) {
			for (int j = 1; j < 11-i; j++) {
				System.out.print("  ");
			}
			int c=1;
			System.out.print(1+"  ");
			for (int j = 1; j <i; j++) {
	            c = c * (i - j) / j;
	            System.out.print(c+"  ");

			}
			System.out.println();
		}
	}
}
