<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %highlight(%-5level) %cyan(%logger{15}) %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.iluwatar.daofactory" level="DEBUG"/>
    <root level="ERROR">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>